{
  "name": "chitty-web",
  "private": true,
  "license": "BSD-3-clause",
  "version": "1.0.0",
  "author": {
    "name": "Jarek Zgoda",
    "url": "https://github.com/zgoda"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zgoda/chitty-web"
  },
  "scripts": {
    "start": "snowpack dev",
    "build": "snowpack build",
    "lint": "eslint 'src/**/*.{js,jsx}'",
    "test": "jest ./tests"
  },
  "eslintConfig": {
    "extends": [
      "preact"
    ],
    "ignorePatterns": [
      "build/",
      "dist/"
    ],
    "rules": {
      "max-len": [
        "error",
        88,
        2
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always",
        {
          "omitLastInOneLineBlock": true
        }
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ]
    }
  },
  "dependencies": {
    "hoofd": "^1.1.0",
    "idb-keyval": "^5.0.4",
    "preact": "^10.5.13",
    "preact-feather": "^4.1.0",
    "redux-zero": "^5.1.7",
    "sockette": "^2.0.6",
    "spectre.css": "^0.5.9"
  },
  "devDependencies": {
    "@prefresh/snowpack": "^3.1.0",
    "@snowpack/plugin-dotenv": "^2.0.5",
    "@snowpack/plugin-sass": "^1.3.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-preact-pure": "^3.0.0",
    "eslint": "^7.22.0",
    "eslint-config-preact": "^1.1.3",
    "jest": "^26.6.3",
    "jest-preset-preact": "^4.0.2",
    "snowpack": "^3.0.13"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.ts",
      "<rootDir>/tests/__mocks__/setupTests.ts"
    ]
  }
}
