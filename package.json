{
  "name": "chitty-web",
  "private": true,
  "license": "BSD-3-clause",
  "version": "1.0.0",
  "author": {
    "name": "Jarek Zgoda",
    "url": "https://github.com/zgoda"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zgoda/chitty-web"
  },
  "scripts": {
    "build": "preact build",
    "serve": "sirv build --port 8080 --cors --single",
    "dev": "preact watch --no-sw",
    "lint": "eslint src",
    "test": "jest"
  },
  "eslintConfig": {
    "extends": [
      "preact"
    ],
    "ignorePatterns": [
      "build/",
      "dist/"
    ],
    "rules": {
      "max-len": [
        "error",
        88,
        2
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always",
        {
          "omitLastInOneLineBlock": true
        }
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ]
    }
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/preact": "^2.0.1",
    "eslint": "^7.22.0",
    "eslint-config-preact": "^1.1.3",
    "jest": "^26.6.3",
    "jest-preset-preact": "^4.0.2",
    "preact-cli": "^3.0.5",
    "sass": "^1.32.8",
    "sass-loader": "^10.1.1",
    "sirv-cli": "1.0.11"
  },
  "dependencies": {
    "hoofd": "^1.1.0",
    "idb-keyval": "^5.0.4",
    "preact": "^10.5.13",
    "preact-feather": "^4.1.0",
    "preact-render-to-string": "^5.1.16",
    "redux-zero": "^5.1.7",
    "sockette": "^2.0.6",
    "spectre.css": "^0.5.9"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.js",
      "<rootDir>/tests/__mocks__/setupTests.js"
    ]
  }
}
